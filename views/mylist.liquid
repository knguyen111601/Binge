{% layout "layout.liquid" %}

{% block content %} 
<link rel="stylesheet" href="/css/mylist.css">
<div class="body">
<h1 class="header">My list</h1>
<p class="once">Once you watch a movie/show, you can click the check to add it to the watch list and rate them!</p>



<h1 class="sections">Movies</h1>
<div class="scroll">
    <div class="card">
        <a href="/binge"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/9e/Plus_symbol.svg/640px-Plus_symbol.svg.png"><h1>Add Movies</h1></a>
    </div>
    
    {% for movie in movie %} 
    {% if movie.type =="movie" %} 
        
        <a class="movie" href="/binge/mylist/{{movie._id}}">
            <img class="poster" src="{{movie.img}}">
            <form class="watched" action="/binge/mylist/{{movie._id}}" method="post">
                <button>✓</button>
            </form>
        </a>

        {% endif %}
    {% endfor %}




</div>

<h1>Shows</h1>
<div class="scroll">
    <div class="card">
        <a href="/binge"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/9e/Plus_symbol.svg/640px-Plus_symbol.svg.png"><h1>Add Shows</h1></a>
    </div>

    {% for movie in movie %} 
    {% if movie.type =="show" %} 
        <a class="movie" href="/binge/mylist/{{movie._id}}">
            <img class="poster" src="{{movie.img}}">
            <form class="watched" action="/binge/mylist/{{movie._id}}" method="post">
                <button>✓</button>
            </form>
        </a>
        {% endif %}
    {% endfor %}

</div>

<h1>Watched</h1>
<div class="scroll">
    <div class="card">
        <a href="/binge"><h1>Watched</h1></a>
    </div>

    {% for movie in movie %} 
    {% if movie.type =="watched" %} 
        <a class="movie" href="/binge/mylist/{{movie._id}}">
            <img class="poster" src="{{movie.img}}">
            <form class="watched" action="/binge/mylist/{{movie._id}}/?_method=DELETE" method="post">
                <button>-</button>
            </form> 
        </a>
        {% endif %}
    {% endfor %}

</div>
</div>



{% endblock%}